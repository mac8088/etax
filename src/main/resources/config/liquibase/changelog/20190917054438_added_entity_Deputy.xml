<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


    <!--
        Added the entity Deputy.
    -->
    <changeSet id="20190917054438-1" author="jhipster">
        <createTable tableName="bpm_deputy">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="assignor_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="owner_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="deputy_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="period_from" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="period_to" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="created_date" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="last_modified_date" type="datetime">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

        <dropDefaultValue tableName="bpm_deputy" columnName="period_from" columnDataType="datetime"/>
        <dropDefaultValue tableName="bpm_deputy" columnName="period_to" columnDataType="datetime"/>
        <dropDefaultValue tableName="bpm_deputy" columnName="created_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="bpm_deputy" columnName="last_modified_date" columnDataType="datetime"/>
    </changeSet>

    <changeSet id="20190917054438-1-relations" author="jhipster">

    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->

</databaseChangeLog>
